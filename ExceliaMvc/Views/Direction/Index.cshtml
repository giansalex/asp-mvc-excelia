@model IEnumerable<ExceliaMvc.Models.Direction>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<form action="" method="get">
    <div class="row">
        <div class="col-md-3">
            <label>Direccion</label>
            <input class="form-control" name="Direction"/>
        </div>
        <div class="col-md-3">
            <label>Fecha</label>
            <input type="date" name="Date" value="" class="form-control" />
        </div>
        <div class="col-md-3">
            <button type="submit" name="submit" class="btn btn-primary">Buscar</button>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitud)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitud)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserUpdated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Latitud)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Longitud)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserUpdated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Updated)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DirectionId }) |
                @Html.ActionLink("Details", "Details", new { id = item.DirectionId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DirectionId })
            </td>
        </tr>
}
    </tbody>

</table>
